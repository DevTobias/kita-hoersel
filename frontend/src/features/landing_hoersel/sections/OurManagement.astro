---
import Picture from '~/components/common/Picture.astro';
import { ASSET_ENDPOINT } from '~/config';
import { fetchHoerselContent } from '~/features/landing_hoersel/services/HoerselService';

const content = await fetchHoerselContent();
---

<section class="relative overflow-hidden py-14 lg:py-32">
  <div class="page-container md:flex lg:flex-row-reverse">
    <div
      class="md:w-1/2 md:flex md:flex-col md:justify-center md:text-right md:pr-5 lg:text-left lg:pr-0"
    >
      <h1 class="text-header-no font-bold mb-5 lg:text-header-md">
        {content.management_title}
      </h1>

      <div
        set:html={content.management_description}
        class="text-primary-200 text-body-no mb-5 lg:mb-0 lg:text-body-md"
      >
      </div>
    </div>

    <div class="md:w-1/2 md:flex md:justify-end md:pr-11">
      <div class="relative pb-[56.25%] md:pb-[50%] h-0 overflow-hidden rounded-lg shadow-lg w-full">
        <Picture
          src={`${ASSET_ENDPOINT}/a4efa066-d025-41c3-9f4b-deb8ccc2345e.jpeg/our_management.jpeg`}
          class="absolute inset-0 object-cover w-full h-full mb-6"
          widths={[400, 600]}
          sizes="(max-width: 600px) 400px, 600px"
          alt="our management inside the kindergarten building"
          aspectRatio="16:9"
        />
      </div>
    </div>
  </div>
  <div class="back-shadow absolute w-full h-[150%] left-0 -top-[25%] -z-10"></div>
</section>

<style is:global>
  .back-shadow {
    background: linear-gradient(180deg, #ffffff 20.85%, #e6f4ff 49.95%, #ffffff 81.25%);
  }
</style>
