---
import Icon from 'astro-icon';

interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="space-y-3 lg:w-[45%] w-full">
  <Icon name={icon} class="h-10 w-10" />
  <h3 class="text-body-xl">{title}</h3>
  <p class="text-body-md lg:leading-8">{description}</p>
</div>
