---
import { QuickFact } from '~/features/landing_template/services/QuickFactService';

interface Props {
  fact: QuickFact;
}

const { fact } = Astro.props;
---

<div class="text-center lg:flex lg:flex-col items-center lg:w-fit">
  <p class="lg:w-fit font-semibold text-header-md md:text-header-xl">{fact.value}</p>
  <p class="lg:w-fit font-medium text-primary-200 text-body-md md:text-body-xl">
    {fact.label}
  </p>
</div>
