---
import Picutre from '~/components/common/Picture.astro';
import { LandingContent } from '~/features/landing_template/services/ContentService';

interface Props {
  content: LandingContent;
  image: string;
}

const { content, image } = Astro.props;
---

<section class="w-full mb-10 mt-20">
  <h2 class="md:hidden mb-5 font-bold text-header-md mt-10">{content.house_title}</h2>

  <div
    class="shadow-lg overflow-hidden md:overflow-visible rounded-lg md:items-center md:flex md:shadow-none"
  >
    <div class="h-full w-full md:flex md:mr-24 md:w-2/6">
      <div class="overflow-hidden h-full w-full md:h-60 md:w-60 md:rounded-2xl md:shadow-lg">
        <div class="block group relative pb-[45%] h-0 md:h-80">
          <Picutre
            src={image}
            class="absolute inset-0 object-cover h-full mb-6"
            widths={[400, 1100]}
            sizes="(max-width: 1100px) 400px, 1100px"
            alt="image of mechterstaedts opening ceremony"
            aspectRatio="16:9"
          />
        </div>
      </div>
    </div>

    <div class="py-5 px-5 md:flex md:flex-col md:justify-center">
      <h2 class="hidden md:block font-bold text-header-md mb-6">{content.house_title}</h2>
      <p class="text-body-no md:text-body-lg leading-7 lg:leading-8">
        {content.house_description}
      </p>
    </div>
  </div>
</section>
