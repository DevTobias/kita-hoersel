---
import FullHorizontalPostCard from '~/features/articles/components/FullHorizontalPostCard.astro';
import { Post } from '~/utils/posts';

interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li class="mb-16">
        <FullHorizontalPostCard post={post} />
      </li>
    ))
  }
</ul>
