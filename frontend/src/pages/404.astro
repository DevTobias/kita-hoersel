---
import Svg from '@kita-hoersel/astro-utils/src/svg/Svg.astro';
import Icon from 'astro-icon';
import { ROUTES } from '~/config';
import BaseLayout from '~/layouts/BaseLayout.astro';
---

<BaseLayout meta={{ title: '404 Existiert nicht' }}>
  <div class="flex flex-col-reverse lg:flex-row h-[90vh] page-container lg:items-center">
    <div
      class="w-full h-1/2 lg:w-2/3 flex flex-col justify-center items-center text-center lg:items-start lg:text-start"
    >
      <div class="text-body-md lg:text-body-lg font-medium text-secondary-700 mb-3">
        {'404.error'.tr()}
      </div>
      <h1 class="text-header-md lg:text-header-xl font-bold mb-5">{'404.not_found'.tr()}</h1>
      <p class="text-body-no lg:text-body-lg mb-5 lg:mb-14">
        {'404.not_found_desc'.tr()}
      </p>
      <a
        href={ROUTES.home}
        class="flex w-fit text-body-no lg:text-body-lg text-secondary-700 justify-center items-center gap-3"
      >
        <span>{'404.back_home'.tr()}</span>
        <Icon name="akar-icons:arrow-right" class="w-5 h-5" />
      </a>
    </div>
    <div class="w-full pt-20 lg:pt-0 h-1/2 lg:w-1/3 flex justify-center items-center">
      <Svg name="error" title="error dog" class="h-full" />
    </div>
  </div>
</BaseLayout>
