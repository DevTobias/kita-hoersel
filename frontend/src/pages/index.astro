---
import Layout from '~/layouts/PageLayout.astro';
import HoerselLandingPage from '~/features/landing_hoersel/views/HoerselLandingPage.astro';
import { ROUTES } from '~/config';
---

<Layout
  header={{
    title: await 'hoersel_landing.header.title'.tr(),
    pretitle: await 'header.welcome_to'.tr(),
    links: [
      { label: await 'header.home'.tr(), url: ROUTES.home },
      { label: await 'header.mechterstaedt'.tr(), url: ROUTES.mechterstaedtLanding },
      { label: await 'header.teutleben'.tr(), url: ROUTES.teutlebenLanding },
    ],
  }}
  container={false}
>
  <HoerselLandingPage />
</Layout>
