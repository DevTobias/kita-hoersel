---
import { marked } from 'marked';

import ArticleLayout from '~/layouts/ArticleLayout.astro';
import { Meta } from '~/components/core/MetaTags.astro';
import { fetchPrivacy } from '~/features/legal/LegalService';

const privacy = await fetchPrivacy();

const meta: Meta = {
  title: privacy.title,
  description: privacy.description,
};

const content = marked.parse(privacy.content);
---

<ArticleLayout meta={meta}>
  <article set:html={content}></article>
</ArticleLayout>
