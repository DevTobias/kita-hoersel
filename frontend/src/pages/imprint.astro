---
import { marked } from 'marked';

import ArticleLayout from '~/layouts/ArticleLayout.astro';
import { Meta } from '~/components/core/MetaTags.astro';
import { fetchImprint } from '~/features/legal/LegalService';

const imprint = await fetchImprint();

const meta: Meta = {
  title: imprint.title,
  description: imprint.description,
};

const content = marked.parse(imprint.content);
---

<ArticleLayout meta={meta}>
  <article set:html={content}></article>
</ArticleLayout>
