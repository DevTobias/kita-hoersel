---
import If from '~/components/common/If.astro';
import Contact from '~/components/widgets/footer/Contact.astro';
import Links from '~/components/widgets/footer/Links.astro';
import Map from '~/components/widgets/footer/Map.astro';

interface Props {
  routeMapUrl?: string;
  fullMapUrl?: string;
  label?: string;
  address?: string;
  contact?: {
    opening: string;
    management: string;
    mobile: string;
    email: string;
    address: string;
  };
  links?: { label: string; url: string }[];
}

const { routeMapUrl, fullMapUrl, contact, links, label, address } = Astro.props;
---

<footer>
  <If condition={contact != null}>
    <Contact slot="if" {...contact} />
  </If>
  <If condition={routeMapUrl != null && fullMapUrl != null}>
    <Map
      slot="if"
      routeMapUrl={routeMapUrl}
      fullMapUrl={fullMapUrl}
      label={label}
      address={address}
    />
  </If>
  <Links links={links} />
</footer>
