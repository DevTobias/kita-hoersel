---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/ArticleHeader.astro';
import Footer from '~/components/widgets/Footer.astro';

const { meta } = Astro.props;
---

<Layout meta={meta}>
  <Header title={meta.title} desc={meta.description} />
  <main
    class="w-full prose-sm prose-a:text-secondary-700 max-w-[75rem] mx-auto py-10 px-8 lg:w-3/4 lg:prose-base lg:py-20"
  >
    <slot />
  </main>
  <Footer />
</Layout>
