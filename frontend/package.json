  "prettier": "@kita-hoersel/prettier-config",
  "eslintConfig": {
    "extends": [
      "@kita-hoersel/eslint-config"
    ],
    "ignorePatterns": [
      "*.[m|c]js",
      "dist"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "no-extend-native": "off",
      "no-await-in-loop": "off",
      "no-param-reassign": "off"
    }
  }
}
