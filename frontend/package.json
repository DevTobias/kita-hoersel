    "build": "astro build && yarn subfont",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint src --ext .tsx,.ts,.astro",
    "subfont": "subfont -i --inline-css -r dist/index.html"
  },
  "devDependencies": {
    "@astrojs/image": "^0.10.0",
    "@astrojs/preact": "^1.1.1",
    "@astrojs/rss": "^1.0.2",
    "@astrojs/sitemap": "^1.0.0",
    "@astrojs/tailwind": "^2.0.2",
    "@astrolib/seo": "^0.2.1",
    "@fontsource/poppins": "^4.5.10",
    "@kita-hoersel/astro-utils": "^1.0.0",
    "@kita-hoersel/eslint-config": "^1.0.0",
    "@kita-hoersel/prettier-config": "^1.0.0",
    "@tailwindcss/typography": "^0.5.7",
    "@types/marked": "^4.0.7",
    "astro": "^1.4.4",
    "astro-compress": "^1.0.12",
    "astro-icon": "^0.7.3",
    "astro-seo": "^0.6.0",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "dayjs": "^1.11.6",
    "marked": "^4.2.2",
    "mdast-util-to-string": "^3.1.0",
    "postcss-preset-env": "^7.8.2",
    "preact": "^10.11.1",
    "reading-time": "^1.5.0",
    "sass": "^1.55.0",
    "sharp": "^0.31.1",
    "subfont": "^6.12.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "vanilla-tilt": "^1.7.2"
